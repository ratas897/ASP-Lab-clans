@using ASP_Lab_clans.Models;
@{
    ViewBag.Title = "Clan";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Float four columns side by side */
        .column {
            float: left;
            width: 25%;
            padding: 10px 10px;
        }

        /* Remove extra left and right margins, due to padding */
        .row {
            margin: 0px 0px;
        }

            /* Clear floats after the columns */
            .row:after {
                content: "";
                display: table;
                clear: both;
            }


        /* Style the counter cards */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 16px;
            text-align: center;
            background-color: #f1f1f1;
            position: relative;
        }
        .Html.ActionLink {
            position: relative;
            width: 100%;
            height: 100px;
        }
    </style>
</head>

<h2>Clan</h2>
<header>@Html.ActionLink("Create your own clan", "CreateClan", "Clan")</header>
@{ int i = 0; }
@foreach (var Clan in Model)
{
    if (i % 4 == 0)
    {

        @:<div class="row">
        }
        <div class="column">
            <div class="card">
                <h3>@Clan.Clan_name [@Clan.Clan_tag]</h3>
                <p>Created by @Clan.Clan_leader</p>
                <p>@Clan.Clan_message</p>
                <p>Members: @Clan.Clan_total_members</p>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("PostJoinClan", "Clan", new { ClanID = Clan.Id })'">Join clan</button>
            </div>
        </div>
        if (i % 4 == 3)
        {
            <hr /><br />
        @:</div>
        <hr />

    }

}
<hr />


